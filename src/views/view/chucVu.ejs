<head>
    <title>Danh sách chức vụ</title>
    <link rel="stylesheet" href="/css/timkiem.css">
    <link rel="icon" type="icon" href="icon/logo.png">
    <%- include('sliderbar.ejs') %>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sign up</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
</head>

<body>
    <style>
        th {
            text-align: center;
        }
    </style>
    <div class="sinhvien">
        <h1>Quản Lý Chức Vụ</h1>
        <form method="post" action="/chucvu">
            <input class="tk" type="submit" value="Tìm kiếm">
            <input class="Timkiem" type="text" name="search" value="" placeholder="Nhập tên phòng hoặc mã chức vụ">
        </form>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Thêm chức vụ
        </button>

        <!-- Modal -->
        <form method="post" action="/chucvu/create">
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Thêm chức vụ</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">

                            <div class="mb-3">
                                <label for="maChucVu" class="form-label">Mã chức vụ</label>
                                <input class="form-control" id="maChucVu" aria-describedby="emailHelp" name="maChucVu"
                                    required>
                            </div>
                            <div class="mb-3">
                                <label for="tenChucVu" class="form-label">Tên chức vụ</label>
                                <input type="text" class="form-control" id="tenChucVu" name="tenChucVu" required>
                            </div>
                            <div class="mb-3">
                                <label for="luongCoDinh" class="form-label">Lương cố định</label>
                                <input type="number" class="form-control" id="luongCoDinh" name="luongCoDinh" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <table border="1">
            <thead>
                <tr>
                    <th>Mã chức vụ</th>
                    <th>Tên chức vụ</th>
                    <th>Lương cố định</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <div>
                    <% listChucVu.forEach(function(item,index){%>
                        <div>
                            <tr>
                                <td>
                                    <%= JSON.stringify(item.maChucVu)%>
                                </td>
                                <td>
                                    <%= JSON.stringify(item.tenChucVu)%>
                                </td>
                                <td>
                                    <%= JSON.stringify(item.luongCoDinh)%>
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-warning">Sửa</button>
                                    <form method="post" style="display: inline;"
                                        action="/chucvu/delete/<%=item.maChucVu%>">
                                        <button type="submit" class="btn btn-danger">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        </div>
                        <% })%>
                </div>
            </tbody>
        </table>
    </div>
</body>