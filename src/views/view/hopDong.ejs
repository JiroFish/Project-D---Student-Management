<head>
    <title>Danh sách hồ sơ hợp đồng</title>
    <link rel="stylesheet" href="/css/timkiem.css">
    <link rel="icon" type="icon" href="icon/logo.png">
    <%- include('sliderbar.ejs') %>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sign up</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
</head>

<body>
    <style>
        th {
            text-align: center;
        }
    </style>
    <div class="sinhvien">
        <h1>Quản Lý Hợp Đồng</h1>
        <form method="post" action="/hopdong/search">
            <button class="tk" type="submit" value="Tìm kiếm">Tìm kiếm</button>
            <input class="Timkiem" type="text" name="searchhd" placeholder="Nhập tên nhân viên">
        </form>

        <form method="get" action="/themhopdong">
            <button type="submit" class="btn btn-primary">
                Thêm Hợp Đồng
            </button>
        </form>

        <table border="1">
            <thead>
                <tr>
                    <th>Mã hợp đồng</th>
                    <th>Mã nhân viên</th>
                    <th>Ngày bắt đầu</th>
                    <th>Ngày kết thúc</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <div>
                    <% listHopDong.forEach(function(item,index){%>
                        <div>
                            <tr>
                                <td>
                                    <%= JSON.stringify(item.maHopDong)%>
                                </td>
                                <td>
                                    <%= JSON.stringify(item.maNhanVien)%>
                                </td>
                                <td>
                                    <%= JSON.stringify(item.ngayBatDau)%>
                                </td>
                                <td>
                                    <%= JSON.stringify(item.ngayKetThuc)%>
                                </td>
                                <td>
                                    <!-- <button type="submit" class="btn btn-warning">Sửa</button> -->
                                    <form method="post" style="display: inline;"
                                        action="/hopdong/delete/<%=item.maHopDong%>">
                                        <button type="submit" class="btn btn-danger">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        </div>
                        <% })%>
                </div>
            </tbody>
        </table>
    </div>
</body>