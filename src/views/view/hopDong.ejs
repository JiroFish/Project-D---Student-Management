<head>
    <title>Danh sách hồ sơ hợp đồng</title>
    <link rel="stylesheet" href="/css/timkiem.css">
    <link rel="icon" type="icon" href="icon/logo.png">
    <%- include('sliderbar.ejs') %>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sign up</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
</head>

<body>
    <style>
        th {
            text-align: center;
        }
    </style>
    <div class="sinhvien">
        <h1>Quản Lý Hợp Đồng</h1>
        <form method="post" action="/hopdong/search">
            <button class="tk" type="submit" value="Tìm kiếm">Tìm kiếm</button>
            <input class="Timkiem" type="text" name="search" placeholder="Nhập tên nhân viên">
        </form>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Thêm hợp đồng
        </button>

        <!-- Modal -->
        <form method="post" action="/hopdong/create">
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Thêm hợp đồng</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">

                            <div class="mb-3">
                                <label for="maHopDong" class="form-label">Mã hợp đồng</label>
                                <input class="form-control" id="maHopDong" aria-describedby="emailHelp" name="maHopDong"
                                    required>
                            </div>
                            <div class="mb-3">
                                <label for="maNhanVien" class="form-label">Mã nhân viên</label>
                                <input type="text" class="form-control" id="maNhanVien" name="maNhanVien" required>
                            </div>
                            <div class="mb-3">
                                <label for="ngayBatDau" class="form-label">Ngày bắt đầu</label>
                                <input type="date" class="form-control" id="ngayBatDau" name="ngayBatDau" required>
                            </div>
                            <div class="mb-3">
                                <label for="ngayKetThuc" class="form-label">Ngày kết thúc</label>
                                <input type="date" class="form-control" id="ngayKetThuc" name="ngayKetThuc" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <table border="1">
            <thead>
                <tr>
                    <th>Mã hợp đồng</th>
                    <th>Mã nhân viên</th>
                    <th>Ngày bắt đầu</th>
                    <th>Ngày kết thúc</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <div>
                    <% listHopDong.forEach(function(item,index){%>
                        <div>
                            <tr>
                                <td>
                                    <%= JSON.stringify(item.maHopDong)%>
                                </td>
                                <td>
                                    <%= JSON.stringify(item.maNhanVien)%>
                                </td>
                                <td>
                                    <%= JSON.stringify(item.ngayBatDau)%>
                                </td>
                                <td>
                                    <%= JSON.stringify(item.ngayKetThuc)%>
                                </td>
                                <td>
                                    <!-- <button type="submit" class="btn btn-warning">Sửa</button> -->
                                    <form method="post" style="display: inline;"
                                        action="/hopdong/delete/<%=item.maHopDong%>">
                                        <button type="submit" class="btn btn-danger">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        </div>
                        <% })%>
                </div>
            </tbody>
        </table>
    </div>
</body>