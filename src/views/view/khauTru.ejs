<head>
    <title>Danh sách bảng khấu trừ</title>
    <link rel="stylesheet" href="css/timkiem.css">
    <link rel="icon" type="icon" href="icon/logo.png">
    <%- include('sliderbar.ejs') %>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sign up</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
</head>

<body>
    <style>
        th {
            text-align: center;
        }
    </style>
    <div class="sinhvien">
        <h1>Quản Lý Giáo Viên</h1>
        <form method="GET" action="">
            <input class="tk" type="submit" value="Tìm kiếm">
            <input class="Timkiem" type="text" name="search" value="" placeholder="Nhập mã hoặc tên giáo viên">
        </form>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Thêm loại khấu trừ
        </button>

        <!-- Modal -->
        <form method="post" action="/bangkhautru/create">
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Thêm loại khấu trừ</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">

                            <div class="mb-3">
                                <label for="maKhauTru" class="form-label">Mã Khấu trừ</label>
                                <input class="form-control" id="maKhauTru" aria-describedby="emailHelp" name="maKhauTru"
                                    required>
                            </div>
                            <div class="mb-3">
                                <label for="loaiKhauTru" class="form-label">Loại khấu trừ</label>
                                <input type="text" class="form-control" id="loaiKhauTru" name="loaiKhauTru" required>
                            </div>
                            <div class="mb-3">
                                <label for="giaTien" class="form-label">Giá Tiền</label>
                                <input type="number" class="form-control" id="giaTien" name="giaTien" required>
                            </div>
                            <div class="mb-3">
                                <label for="moTa" class="form-label">Mô Tả</label>
                                <input type="text" class="form-control" id="moTa" name="moTa">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <table border="1">
            <thead>
                <tr>
                    <th class="col-2">Mã Khấu Trừ</th>
                    <th class="col-2">Loại Khấu Trừ</th>
                    <th class="col-2">Giá Tiền</th>
                    <th class="col-4">Mô Tả</th>
                    <th class="col-2">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <div>
                    <% listBangKhauTru.forEach(function(item,index){%>
                        <div>
                            <tr>
                                <td>
                                    <%= JSON.stringify(item.maKhauTru)%>
                                </td>
                                <td>
                                    <%= JSON.stringify(item.loaiKhauTru)%>
                                </td>
                                <td>
                                    <%= JSON.stringify(item.giaTien)%>
                                </td>
                                <td>
                                    <%= JSON.stringify(item.moTa)%>
                                </td>
                                <td>
                                    <!-- <button type="submit" class="btn btn-warning">Sửa</button> -->
                                    <form method="post" style="display: inline;"
                                        action="/bangkhautru/delete/<%=item.maKhauTru%>">
                                        <button type="submit" class="btn btn-danger">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        </div>
                        <% })%>
                </div>
            </tbody>
        </table>
    </div>
</body>